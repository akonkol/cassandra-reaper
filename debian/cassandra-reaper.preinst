#!/bin/bash
if id -u reaper; then
  echo "Reaper user exists,  skipping user"
else
  /usr/sbin/groupadd reaper || true
  /usr/sbin/useradd -r -g reaper -s /sbin/nologin -d /var/empty -c 'cassandra reaper' reaper || true
fi

if [ ! -d "/etc/spotify" ]; then
  mkdir /etc/spotify
  chown reaper: /etc/spotify
fi
